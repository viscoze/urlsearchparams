{
  "name": "urlsearchparams",
  "version": "1.0.0",
  "description": "A small library to make working with the URL search string easier",
  "main": "build/index.js",
  "scripts": {
    "test": "jest --watch",
    "lint": "eslint src",
    "prettier": "prettier --check '{src,public,config}/**/*.{js,json,md,html}'",
    "build": "webpack --mode production",
    "publish": "npm publish",
    "prepublish": "webpack --mode production"
  },
  "dependencies": {
    "lodash": "^4.17.20"
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@babel/preset-env": "^7.12.11",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.6.3",
    "babel-loader": "^8.2.2",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "eslint": "^7.16.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "jest": "^26.6.3",
    "prettier": "^2.0.5",
    "webpack": "^5.11.1",
    "webpack-cli": "^4.3.0"
  },
  "prettier": {
    "printWidth": 100,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all",
    "arrowParens": "avoid"
  },
  "jest": {
    "transform": {
      "^.+\\.js?$": "babel-jest"
    },
    "testMatch": [
      "<rootDir>/**/*.test.js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/viscoze/urlsearchparams.git"
  },
  "keywords": [
    "urlsearchparams",
    "url",
    "params",
    "query"
  ],
  "author": "viscoze",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/viscoze/urlsearchparams/issues"
  },
  "homepage": "https://github.com/viscoze/urlsearchparams#readme",
  "private": false
}
