{
  "name": "url-search-params",
  "version": "1.0.0",
  "description": "A small library to make working with the URL search string easier",
  "main": "index.js",
  "scripts": {
    "test": "jest --watch",
    "lint": "dreact lint js --cache --fix",
    "prettier": "prettier --check '{src,public,config}/**/*.{js,json,md,html}'"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.12.11",
    "babel-jest": "^26.6.3",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "dreact": "^0.8.1",
    "jest": "^26.6.3",
    "prettier": "^2.0.5",
    "redux-mock-store": "^1.4.0",
    "uuid": "^8.3.2"
  },
  "eslintConfig": {
    "extends": [
      "./node_modules/dreact/cli/environment/eslint.config.js"
    ]
  },
  "prettier": {
    "printWidth": 100,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all",
    "arrowParens": "avoid"
  },
  "jest": {
    "transform": {
      "^.+\\.js?$": "babel-jest"
    },
    "testMatch": [
      "<rootDir>/**/*.test.js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/viscoze/urlsearchparams.git"
  },
  "keywords": [
    "urlsearchparams",
    "url",
    "params",
    "query"
  ],
  "author": "viscoze",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/viscoze/urlsearchparams/issues"
  },
  "homepage": "https://github.com/viscoze/urlsearchparams#readme"
}
