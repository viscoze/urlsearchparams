{
  "name": "@viscoze/urlsearchparams",
  "version": "1.1.0",
  "description": "A small library to make working with the URL search string easier",
  "main": "build/bundle.js",
  "scripts": {
    "test": "jest",
    "lint": "eslint src",
    "prettier": "prettier --check '{src,public,config}/**/*.{ts,js,json,md,html}'",
    "build": "webpack",
    "publish": "npm publish --access public",
    "prepublish": "yarn build"
  },
  "dependencies": {
    "lodash": "^4.17.20"
  },
  "devDependencies": {
    "@types/jest": "^26.0.20",
    "@types/lodash": "^4.14.168",
    "eslint": "^7.16.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "jest": "^26.6.3",
    "lodash-webpack-plugin": "^0.11.6",
    "prettier": "^2.0.5",
    "ts-loader": "^8.0.17",
    "typescript": "^4.2.2",
    "uglifyjs-webpack-plugin": "^2.2.0",
    "webpack": "^5.11.1",
    "webpack-cli": "^4.3.0"
  },
  "prettier": {
    "printWidth": 100,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all",
    "arrowParens": "avoid"
  },
  "jest": {
    "transform": {
      "^.+\\.ts?$": "babel-jest"
    },
    "testMatch": [
      "<rootDir>/**/*.test.ts"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/viscoze/urlsearchparams.git"
  },
  "keywords": [
    "urlsearchparams",
    "url",
    "params",
    "query"
  ],
  "author": "vlad-viscoze",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/viscoze/urlsearchparams/issues"
  },
  "homepage": "https://github.com/viscoze/urlsearchparams#readme",
  "private": false
}
